<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustTopUP"
    android:paddingTop="@dimen/padding_activity"

    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_activity"
        android:paddingRight="@dimen/padding_activity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top up from Rp 10.000,-"
            android:fontFamily="@font/cookie"
            android:textSize="@dimen/titleTV"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/etNominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/background_edit_text"
            android:fontFamily="@font/rancho"
            android:hint="Rp"
            android:padding="@dimen/paddingEditText"
            android:textColor="@color/black"
            android:textSize="@dimen/etTextSize"
            android:textColorHint="@color/textColorHint" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select your top up nominal"
            android:fontFamily="@font/cookie"
            android:textSize="@dimen/titleTV"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/padding_activity"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_edit_text"
                android:fontFamily="@font/rancho"
                android:text="10.000"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/black"
                android:textSize="@dimen/etTextSize"
                android:textColorHint="@color/textColorHint"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/padding_activity_kecil"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/et25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_edit_text"
                android:fontFamily="@font/rancho"
                android:text="25.000"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/black"
                android:textSize="@dimen/etTextSize"
                android:textColorHint="@color/textColorHint"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/padding_activity_kecil"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/et50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_edit_text"
                android:fontFamily="@font/rancho"
                android:text="50.000"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/black"
                android:textSize="@dimen/etTextSize"
                android:textColorHint="@color/textColorHint"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/padding_activity_kecil"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/et100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_edit_text"
                android:fontFamily="@font/rancho"
                android:text="100.000"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/black"
                android:textSize="@dimen/etTextSize"
                android:textColorHint="@color/textColorHint"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/padding_activity_kecil"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/et250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_edit_text"
                android:fontFamily="@font/rancho"
                android:text="250.000"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/black"
                android:textSize="@dimen/etTextSize"
                android:textColorHint="@color/textColorHint"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/padding_activity_kecil"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/et500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/background_edit_text"
                android:fontFamily="@font/rancho"
                android:text="500.000"
                android:padding="@dimen/paddingEditText"
                android:textColor="@color/black"
                android:textSize="@dimen/etTextSize"
                android:textColorHint="@color/textColorHint"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/padding_activity_kecil"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:fontFamily="@font/rancho"
        android:textSize="@dimen/titleTV"
        android:background="@color/bgbutton"/>
</RelativeLayout>