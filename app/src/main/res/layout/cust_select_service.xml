<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activity.CustSelectService">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_activity"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:src="@drawable/laundry"
            android:background="@color/colorPrimary"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_activity"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desciption"
            android:textAllCaps="false"
            android:fontFamily="@font/rancho"
            android:textSize="@dimen/titleTV"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/btDesc"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textAllCaps="false"
            android:fontFamily="@font/rancho"
            android:textSize="@dimen/titleTV"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/btServ"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discussion"
            android:textAllCaps="false"
            android:fontFamily="@font/rancho"
            android:textSize="@dimen/titleTV"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/btDiscuss"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_activity"/>
    </ScrollView>



</LinearLayout>